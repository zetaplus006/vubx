{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "../unit-build/"
    },
    "include": [
        "../../lib/**/*.ts",
        "./**/*.test.ts",
    ]
}