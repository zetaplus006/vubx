{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "vubx": [
        "src/vubx.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts",
    "typings/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "lib/*"
  ],
  "compileOnSave": false
}